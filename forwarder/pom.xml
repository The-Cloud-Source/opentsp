<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>TSP</groupId>
	<artifactId>tsp-forwarder</artifactId>
	<version>1.0_TEST</version>
	<packaging>rpm</packaging> 
	<name>Time Series Forwarder</name>
	<description>Time Series Pipeline Build</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>exec-maven-plugin</artifactId>
				<groupId>org.codehaus.mojo</groupId>
				<version>1.3.2</version>
					<executions>
						<execution>
							<id>Build Forwarder</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>exec</goal>
							</goals>
							<configuration>
								<environmentVariables>
									<GOPATH>${basedir}/..</GOPATH>
								</environmentVariables>
								<executable>go</executable>
								<commandlineArgs>build opentsp.org/cmd/tsp-forwarder/</commandlineArgs>
							</configuration>
						</execution>
					</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>tsp-forwarder</id>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<name>tsp</name>
					<artifactId>tsp</artifactId>
					<packager>james.brooks@betfair.com</packager>
					<needarch>x86_64</needarch>
					<group>SRE</group>
					<license>Apache License v2.0</license>
					<conflicts>
						<conflict>kernel = 1:2.6.18-194.32.1.el5</conflict>
						<conflict>kernel = 1:2.6.18-238.5.1.el5</conflict>
						<conflict>kernel-xen = 1:2.6.18-238.12.1.el5</conflict>
						<conflict>kernel-xen = 1:2.6.18-274.7.1.el5</conflict>
					</conflicts>
					<preinstallScriptlet>
							<script>/sbin/service tsp stop > /dev/null 2&gt;&amp;1 || true</script>
					</preinstallScriptlet>
					<postinstallScriptlet>
							<script>
								/bin/mkdir -p /etc/tsp/collect.d || true
								/sbin/checkconfig --add tsp
							</script>
					</postinstallScriptlet>
					<preremoveScriptlet>
						<script>
							s="tsp"
							/sbin/service $s stop &gt;/dev/null
							if [ "$1" = 0 ] ; then
								/sbin/chkconfig --del $s || true
							fi
						</script>
					</preremoveScriptlet>
					<mappings>
						<mapping>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<directory>/usr/bin/</directory>
							<sources>
								<source>
									<location>tsp-forwarder</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<directory>/etc/init.d</directory>
							<sources>
								<source>
									<location>../src/opentsp.org/cmd/tsp-forwarder/dist/forwarder.init</location>
									<destination>tsp</destination>
								</source>
							</sources>
						</mapping>
						<mapping>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<directory>/etc/sysconfig</directory>
							<sources>
								<source>
									<location>../src/opentsp.org/cmd/tsp-forwarder/dist/forwarder.sysconfig</location>
									<destination>tsp</destination>
								</source>
							</sources>
						</mapping>
						<mapping>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<directory>/usr/share/man/man8</directory>
							<sources>
								<source>
									<location>../src/opentsp.org/cmd/tsp-forwarder/dist/forwarder.8</location>
									<destination>tsp-forwarder.8</destination>
								</source>
							</sources>
						</mapping>
						<mapping>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<directory>/etc/logrotate.d</directory>
							<sources>
								<source>
									<location>../src/opentsp.org/cmd/tsp-forwarder/dist/forwarder.logrotate</location>
									<destination>tsp</destination>
								</source>
							</sources>
						</mapping>
					</mappings>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
